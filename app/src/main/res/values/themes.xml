<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Traveling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Text attr -->
        <item name="travelingTxtH4">@style/TextAppearance.Traveling.Headline4</item>
        <item name="travelingTxtBody1">@style/TextAppearance.Traveling.Body1</item>
        <!-- Button attr -->
        <item name="travelingBtIcon">@style/Button.TravelingWorld.Icon</item>
        <!-- Card view attr -->
        <item name="travelingCV">@style/CardViewTravelingWorld</item>
        <item name="travelingImgCV">@style/ImagenCardViewTravelingWorld</item>
        <item name="travelingTxtCVBody">@style/TextCardViewBody</item>
        <item name="travelingTxtCVTittle">@style/TextCardViewTitle</item>
    </style>
</resources>
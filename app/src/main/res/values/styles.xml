<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ShapeAppearance.TravelingWorld.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="Button.TravelingWorld.Icon" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TravelingWorld.Rounded</item>
        <item name="iconSize">@android:dimen/app_icon_size</item>
        <item name="iconTintMode">multiply</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="CardViewTravelingWorld">
        <item name="android:layout_height">260dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">40dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>
    <style name="TextCardViewBody" parent="TextAppearance.Traveling.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextCardViewTitle" parent="TextAppearance.Traveling.Headline4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ImagenCardViewTravelingWorld">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintHeight_percent">0.65</item>
    </style>
    <style name="HyperLinksTextTravelingWorld" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:textColor">?attr/travelingColorTextHyperLinks</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/home_contraint_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.home.fragments.HomeContentFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_content_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_content_tab_camera"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@drawable/tab_color_selector"
            android:icon="@drawable/ic_action_camera"  />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_content_tab_favorite"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@color/purple_light"
            android:icon="@drawable/ic_action_favorite"  />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_content_tab_landscape"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@color/rose_light"
            android:icon="@drawable/ic_action_landscape"  />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_content_tab_face"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@color/yellow_light"
            android:icon="@drawable/ic_action_face"  />

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_content_viewpager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_content_tablayout">
    </androidx.viewpager2.widget.ViewPager2>
</androidx.constraintlayout.widget.ConstraintLayout >